<?xml version="1.0"?>

<robot name="basic_link" xmlns:xacro="http://ros.org/wiki/xacro" >

    <xacro:property name="package_name" value="tm_empl1_description" />
    <xacro:include filename="$(find ${package_name})/urdf/basic_gz_position.xacro" />

    <link name="world">
    </link>
    <joint name="world_to_baselink" type="fix">
        <origin xyz="0 0 0.15" rpy="0 0 0"/>
    </joint>

    <link name="base_link">
        <visual>
            <origin xyz="0.0 0.0 0.0" rpy="0 0 0" />
            <geometry>
                <box size="0.1 0.15 0.2" />
            </geometry>
            <material name="red">
                <color rgba="1.0 0 0 1" />
            </material>
        </visual>
        <collision>
            <origin xyz="0.0 0.0 0.0" rpy="0 0 0" />
            <geometry>
                <box size="0.1 0.15 0.2" />
            </geometry>
        </collision>
        <inertial>
            <origin xyz="0.0 0.0 0.0" rpy="0 0 0" />
            <mass value="1" />
            <inertia ixx="1.0" ixy="0.0" ixz="0.0" iyy="1.0" iyz="0.0" izz="1.0" />
        </inertial>
    </link>

    <link name="link_1">
        
        <visual>
            <origin xyz="0.0 0.0 0.0" rpy="0 0 0" />
            <geometry>
                <box size="0.1 0.15 0.2" />
            </geometry>
            <material name="green">
                <color rgba="0.0 1.0 0.0 1.0" />
            </material>
        </visual>

        <collision>
            <origin xyz="0.0 0.0 0.0" rpy="0 0 0" />
                <geometry>
                    <box size="0.1 0.15 0.2" />
                </geometry>
        </collision>

        <inertial>
            <origin xyz="0 0 0" rpy="0 0 0" />
            <mass value="1" />
            <inertia ixx="1.0" ixy="0.0" ixz="0.0" iyy="1.0" iyz="0.0" izz="1.0" />
        </inertial>

    </link>

    <joint name="base_link_to_link_1_joint" type="revolute">
        <parent link="base_link" />
        <child link="link_1" />
        <axis xyz="1 0 0" />
        <limit lower="-3.14159" velocity="1" effort="1000.0" />
        <origin xyz="0 0 0.15" rpy="0 0 0" />
    </joint>

</robot>